{
  "name": "@quizzme/storage",
  "version": "0.1.0",
  "description": "Storage abstraction layer for QuizzMe - provides unified interface for local and remote storage",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "quizzme",
    "storage",
    "localStorage",
    "abstraction"
  ],
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  }
}
